
<h1>Nuevo Reciclador</h1>
<%= form_with(model: @reciclador, local: true) do |form| %>

  <div class="form-group">
    <%= form.label :nombre %>
    <%= form.text_field :nombre, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :telefono %>
    <%= form.text_field :telefono, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :direccion %>
    <%= form.text_field :direccion, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.email_field :email, class: 'form-control' %>
  </div>

  <%= form.submit 'Crear Reciclador', class: 'btn btn-primary' %>
<% end %>
<br>
<%= link_to 'Volver', recicladores_path, class: 'btn btn-secondary' %>

