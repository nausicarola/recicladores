
<h1><%= @reciclador.nombre %></h1>

<p>Teléfono: <%= @reciclador.telefono %></p>
<p>Dirección: <%= @reciclador.direccion %></p>
<p>Email: <%= @reciclador.email %></p>

<%= link_to 'Ver Materiales Reciclados', reciclador_materiales_path(@reciclador), class: 'btn btn-info' %>

<%= link_to 'Editar', edit_reciclador_path(@reciclador), class: 'btn btn-warning' %> 
<%= link_to 'Eliminar', reciclador_path(@reciclador), method: :delete, data: { confirm: '¿Estás seguro?' }, class: 'btn btn-danger' %> 

